<script type="text/javascript">
  function deviceModal(){
    $('#deviceModal').modal('show');
    $('#categoryModal').modal('show');
  }  
</script>

<%= form_for(@server) do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% @server.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :device %><br />
    <%= f.select :device_id, @devices.collect{|d| [d.name, d.id]} %>
    <%= link_to_modal 'Add Device', new_device_path, :width=> "600", :height =>"400", :remote => true %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.select :category_id, @categories.collect{|t| [t.name, t.id]} %>
    <%= link_to_modal 'Add Category', new_category_path, :width=> "600", :height =>"400", :remote => true %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :ip %><br />
    <%= f.text_field :ip %>
  </div>
  <div class="field">
    <%= f.label :service %><br />
    <%= f.select :service_id, @services.collect{|s| [s.name, s.id]} %>
    <%= link_to_modal 'Add Service', new_service_path, :width=> "600", :height =>"400", :remote => true %>
  </div>
  <div class="field">
    <%= f.label :port %><br />
    <%= f.text_field :port %>
  </div>
  <div class="field">
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :sysadm %><br />
    <%= f.check_box :sysadm %>
  </div>
  <div class="field">
    <%= f.label :root_password %><br />
    <%= f.text_field :root_password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
