  <tr>
    <td><%= server.device.name %></td>
    <td><%= server.category.name %></td>
    <td><%= server.name %></td>
    <td><%= server.ip %></td>
    <td><%= server.service.name %></td>
    <td><%= server.port %></td>
    <td><%= server.user %></td>
    <td><%= server.password %></td>
    <td><%= server.sysadm ? "SIM" : "NÃƒO"%></td>
    <td><%= server.root_password %></td>

    <td><%= link_to '', server, :class => "icon-eye-open" %></td>
    <td><%= link_to '', edit_server_path(server), :class => "icon-edit" %></td>
    <td><%= link_to '', server, :class => "icon-remove", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
